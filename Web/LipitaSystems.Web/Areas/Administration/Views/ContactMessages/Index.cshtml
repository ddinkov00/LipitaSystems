@model IEnumerable<LipitaSystems.Data.Models.ContactMessage>

@{
    ViewData["Title"] = "Index";
}


<br>
<br>
<br>
<section class="mt-5 container">
    <h1>Съобщения</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Име
                </th>
                <th>
                    Контакт
                </th>
                <th>
                    Тема
                </th>
                <th>
                    Съобщение
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Инфо</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>