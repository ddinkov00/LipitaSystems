@model LipitaSystems.Data.Models.ContactMessage

@{
    ViewData["Title"] = "Delete";
}

<br>
<br>
<br>
<section class="mt-5 container">
    <h1>Изтрий</h1>

    <h3>Сигурен ли си че искаш да го изтриеш?</h3>
    <div>
        <h4>Съобщение</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Име
            </dt>
            <dd class="col-sm-10">
                @{
                    var name = Model.Name == null ? "anonymous" : Model.Name;
                }
                @Html.DisplayFor(model => name)
            </dd>
            <dt class="col-sm-2">
                Обратна връзка
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact)
            </dd>
            <dt class="col-sm-2">
                Тема
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject)
            </dd>
            <dt class="col-sm-2">
                Съобщение
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>
            <dt class="col-sm-2">
                Изтрито ли е
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
            <dt class="col-sm-2">
                Кога е изтрито
            </dt>
            <dd class="col-sm-11">
                @Html.DisplayFor(model => model.DeletedOn)
            </dd>
            <dt class="col-sm-2">
                Кога е създадено
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                Кога е променено
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Изтрий" class="btn btn-danger" /> |
            <a asp-action="Index">Назад</a>
        </form>
    </div>
</section>