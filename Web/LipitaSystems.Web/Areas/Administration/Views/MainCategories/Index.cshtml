@model IEnumerable<LipitaSystems.Data.Models.MainCategory>

@{
    ViewData["Title"] = "Категории";
}

<br>
<br>
<br>
<section class="container mt-5">
    <h1>Главни Категории</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Създай нова</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Име:
                </th>
                <th>
                    Създадено на:
                </th>
                <th>
                    Променено на:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a> |
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Инфо</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>