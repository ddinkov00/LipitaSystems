@model IEnumerable<LipitaSystems.Data.Models.Order>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<br>
<section class="container mt-5">
    <h1>Поръчки</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Име
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    Цена
                </th>
                <th>
                    Адрес
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryOffice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryOffice.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        <form asp-action="Restore" asp-route-id="@item.Id">
                            <input type="hidden" asp-for="@item.Id" />
                            <input type="submit" value="Restore" class="btn btn-danger" /> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>