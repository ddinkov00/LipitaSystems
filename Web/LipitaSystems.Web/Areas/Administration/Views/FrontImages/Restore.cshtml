@model IEnumerable<LipitaSystems.Data.Models.FrontImage>

@{ ViewData["Title"] = "Заглавни Снимки"; }

<br>
<br>
<br>
<section class="container mt-5">
    <h1>Изтрити Заглавни Снимки</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Заглавие:
                </th>
                <th>
                    Съдържание:
                </th>
                <th>
                    Създадено на:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Heading)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        <form asp-action="Restore" asp-route-id="@item.Id">
                            <input type="hidden" asp-for="@item.Id" />
                            <input type="submit" value="Restore" class="btn btn-danger" /> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Инфо</a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>