@model LipitaSystems.Web.ViewModels.InputModels.ProductInputModel

@{
    ViewData["Title"] = "Create";
}

<br>
<br>
<br>
<section class="container mt-5">
    <h1>Създай</h1>

    <h4>Продукт</h4>
    <hr />
    <div class="row">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Images" class="control-label"></label>
                    <input asp-for="Images" class="form-control" />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription" class="control-label"></label>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    <textarea rows="2" asp-for="ShortDescription" class="form-control" /></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea rows="4" asp-for="Description" class="form-control" /></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="QuantityInstock" class="control-label"></label>
                    <span asp-validation-for="QuantityInstock" class="text-danger"></span>
                    <input asp-for="QuantityInstock" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SecondaryCategoryId" class="control-label"></label>
                    <select asp-for="SecondaryCategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>

            </div>
            <div class="col-md-6">
                @* Тук ще се добавят спецификациите за продукта *@
                <div id="SpecificationsContainer" class="row">
                    <label asp-for="Specifications"></label>
                    <a class="btn btn-success" onclick="AddMoreSpecifications()">+</a>
                </div>
            </div>
            <div class="form-group row">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Назад</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    var specificationsIndex = 0;    
    function AddMoreSpecifications() {
        $("#SpecificationsContainer").
            append("<div class='form-group'>Име: <input type='text' name='Specifications[" + specificationsIndex + "].Name' /> Стойност: <input type='text' name='Specifications[" + specificationsIndex + "].Value' /></div>");
        specificationsIndex++;
    }
</script>
}
