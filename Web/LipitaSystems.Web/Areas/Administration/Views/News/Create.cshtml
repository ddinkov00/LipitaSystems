@model LipitaSystems.Data.Models.News

@{
    ViewData["Title"] = "Create";
}

<br>
<br>
<br>
<section class="mt-5 container">
    <h1>Създай</h1>

    <h4>Новина</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Заглавие</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label lass="control-label">Съдържание</label>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <textarea rows="5" asp-for="Content" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Създай" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Назад</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
