@model LipitaSystems.Data.Models.SecondaryCategory

@{
    ViewData["Title"] = "Delete";
}


<br>
<br>
<br>
<section class="mt-5 container">
    <h1>Изтрий</h1>

    <h3>Сигурен ли си че искаш да го изтриеш</h3>
    <div>
        <h4>Съб категории</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Име
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Адрес на снимка
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>
            <dt class="col-sm-2">
                Главна категория
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MainCategory.Name)
            </dd>
            <dt class="col-sm-2">
                Изтрито ли е
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
            <dt class="col-sm-2">
                Кога е изтрито
            </dt>
            <dd class="col-sm-10">
                @{
                    var date = Model.DeletedOn == null ? "-" : Model.DeletedOn.ToString();
                    @Html.DisplayFor(model => date)
                }
            </dd>
            <dt class="col-sm-2">
                Кога е създадено
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                Кога е променено
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Изтрий" class="btn btn-danger" /> |
            <a asp-action="Index">Назад</a>
        </form>
    </div>
</section>