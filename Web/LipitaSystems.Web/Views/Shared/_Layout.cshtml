    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo mr-auto">
                <img src="~/img/output-onlinepngtools.png" class="img-fluid" style="transform: scale(1.5)" alt="">
            </a>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Начало</a></li>
                    @await Component.InvokeAsync("NavCategories")
                    <li class="drop-down">
                        <a href="#services">Услуги</a>
                        <ul>
                            <li><a asp-area="" asp-controller="Host" asp-action="Maintanance">Поддръжка на компютърни системи</a></li>
                            <li><a asp-area="" asp-controller="Host" asp-action="Hosting">Хостване</a></li>
                            <li><a asp-area="" asp-controller="Host" asp-action="SecurityControle">Контрол на достъпа</a></li>
                            <li><a asp-area="" asp-controller="Host" asp-action="Websites">Изграждане на уеб сайт</a></li>
                            <li><a asp-area="" asp-controller="Host" asp-action="Others">Други</a></li>
                        </ul>
                    </li>
                    @*<li><a asp-area="" asp-controller="Home" asp-action="About">За нас</a></li>*@
                    <li><a asp-area="" asp-controller="Home" asp-action="News">Новини</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Контакти</a></li>
                    @if (this.Context.Request.Cookies["cartProducts"] != null)
                    {
                        <li><a id="cartIconShop" asp-area="" asp-controller="Shop" asp-action="Cart"><i class="icofont-shopping-cart cart-color h4"></i><i class="icofont-plus-circle text-danger h4"></i></a></li>
                    }
                    else
                    {
                        <li><a id="cartIconShop" asp-area="" asp-controller="Shop" asp-action="Cart"><i class="icofont-shopping-cart h4 cart-color"></i></a></li>

                    }
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li><a asp-area="Administration" asp-controller="Dashboard" asp-action="Index">ADMIN</a></li>
                    }
                </ul>
            </nav><!-- .nav-menu -->

        </div>
