@model List<LipitaSystems.Data.Models.News>

<br>
<br>
<br>
<section class="mt-5 container">
    <div class="section-title">
        <div class="section-title">
            <h2>Новини</h2>
            @if (Model.Count == 0)
            {
                <h3 class="text-danger mt-5">Все още няма добавени новини</h3>
            }
            else
            {
                <h3><span>Последните новини</span></h3>
            }
        </div>
    </div>
    @if (Model.Count > 0)
    {
        <hr class="mb-5" />
        @foreach (var news in Model)
        {
            <blockquote class="blockquote">
                <h3 class="mb-0 text-primary">@news.Title</h3>
                <footer class="blockquote-footer mb-3">@news.CreatedOn.ToString("HH:mm часа dd.MM")</footer>
                <p>@news.Content</p>
            </blockquote>
            <hr class="mb-5" />
        }
    }
</section>
