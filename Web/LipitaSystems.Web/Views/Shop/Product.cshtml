@model LipitaSystems.Web.ViewModels.ViewModels.Products.ProductByIdViewModel

<br>
<br>
<br>
<main class="mt-5">
    <div class="container">
        <section class="mb-0">
            <nav aria-label="breadcrumb" class="">
                <ol class="breadcrumb bg-white">
                    <li class="breadcrumb-item"><a href="#">Category</a></li>
                    <li class="breadcrumb-item"><a href="#">Sub-Category</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Product Name</li>
                </ol>
            </nav>
            <div class="row mt-5">

                <div class="col-md-6 mb-4 mb-md-0">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        @if (Model.ImagesUlr.Count() > 1)
                        {
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < Model.ImagesUlr.Count(); i++)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active bg-dark"></li>
                                }
                                else
                                {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="bg-dark"></li>
                                }
                            }
                        </ol>
                        }
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.ImagesUlr.Count(); i++)
                            {
                                if (i == 0)
                                {
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="@Model.ImagesUlr.ElementAt(i)" alt="@i slide">
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="@Model.ImagesUlr.ElementAt(i)" alt="@i slide">
                                    </div>
                                }
                            }
                        </div>
                        @if (Model.ImagesUlr.Count() > 1)
                        {
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                                <span class="sr-only text-primary">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <p id="productId" hidden>@Model.Id</p>
                    <h5>@Model.Name</h5>
                    <p class="mb-2 text-muted text-uppercase small">@Model.SecondaryCategoryName</p>
                    <p><span class="mr-1 h4"><strong>@Model.OriginalPrice лв.</strong></span></p>
                    <p class="pt-1">@Model.Description</p>
                    <hr>
                    @if (Model.QuantityInStock <= 0)
                    {
                        <p class="text-danger"><strong>Изчерпано!</strong></p>
                    }
                    else if (Model.QuantityInStock <= 5)
                    {
                        <p class="text-warning"><strong>Последни бройки!</strong></p>
                    }
                    else
                    {
                        <p class="text-dark"><strong>Налично в момента</strong></p>
                    }
                    @if (Model.QuantityInStock > 0)
                    {
                        <hr>
                        <p>Количество</p>
                        <div class="btn-group col-md-4 col-7" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-secondary"><i class="icofont-minus"></i></button>
                            <input id="productQuantity" type="text" class="form-control " value="1" />
                            <button type="button" class="btn btn-secondary"><i class="icofont-plus"></i></button>
                        </div>

                        <hr>
                        <h5>Обща цена: <span class="text-danger h4">@Model.OriginalPrice лв.</span></h5>
                        <button type="button" class="btn-primary btn btn-md mr-1 mb-2">Купи сега</button>
                        <button type="button" id="shoppingCartBtn" class="btn-outline-dark btn btn-md mr-1 mb-2"><i class="icofont-shopping-cart">Добави в количка</i></button>
                    }
                </div>
            </div>
        </section>
        <div>

        </div>
    </div>
</main>
<hr>

@section Scripts
{
    <script src="~/js/AddProductToTheCockies.js"></script>
}